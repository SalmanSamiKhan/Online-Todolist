<%- include('header') -%>

<body>
    <div class="box" id="heading">
        <h1>
            <!-- ToDo List
            <br> -->
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <% listItems.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="check" value = "<%= item._id %>"  onchange="this.form.submit()">
                    <!-- using onchange submit this form , inside value lies name="check" value which is in this case item._id on db retrieved from forEach item -->
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %> ">
            </form>
            <% }) %>
            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required>
                <button type="submit" name="titleName" value= <%= listTitle %> >+</button>
            </form>
    </div>

    
</body>
<%- include('footer') -%> 